<div class="row">
    <div class="col-12">
      
        <div class="card">
            
            <div class="card-body">
                <h4 class="page-title" style="color: #fff;">Edit User Detail</h4><br>
                <form method="post" action="/users/update/<%=userdata._id %>" id="addConciergeForm">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group mb-3">
                                <label>Name<span class="text-danger">*</span></label>
                                <input type="text" name="name" class="form-control" placeholder="Name" value="<%=userdata.name %>" autocomplete="off">
                                <div class="text-danger name"></div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="form-group mb-3">
                                <label>Enter Email<span class="text-danger">*</span></label>
                                <input type="text" id="email" name="email" class="form-control" placeholder="Enter Email" autocomplete="off" value="<%= userdata.email%>">
                                <div class="text-danger email"></div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            
                        </div>
                        
                        
                        <div class="col-lg-12 text-left">
                            <div class="form-group mb-3 text-center">
                                <button id="submitAddConciergeForm" type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#addConciergeForm").validate({
            errorPlacement: function (error, element) {
                const name = $(element).attr("name");
                error.appendTo($("." + name));
            },
            rules: {
                concierge_type: {
                    required: true
                },
                name: {
                    required: true,
                    minlength: 3,
                    maxlength: 20,
                    pattern: /^[a-zA-Z0-9 ]*$/
                },
                last_name: {
                    required: true,
                    minlength: 3,
                    maxlength: 20,
                    pattern: /^[a-zA-Z0-9 ]*$/
                },
                email: {
                    required: true,
                    minlength: 3,
                    maxlength: 80,
                    pattern: /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
                },
                mobile:{
                    required: true,
                    pattern: /^(?:\(\d{3}\)|\d{3})[- ]?\d{3}[- ]?\d{4}$/
                },
                password: {
                    required: true,
                    minlength: 8,
                },
                confirm_password: {
                    required: true,
                    equalTo: '#password'
                }
            },
            messages: CONCIERGE_ADD_FORM
        });
    });
</script>

